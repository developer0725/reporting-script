{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019"],

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["./lib/**/*", "./types/**/*"],
  "exclude": ["./dist/**/*"]
}
